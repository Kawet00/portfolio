{
  "version": 2,
  "installCommand": "npm install",
  "env": {
    "npm_config_optional": "false"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.ts" },
    { "src": "/(.*)",     "dest": "/dist/public/$1" }
  ]
}
